{
  "manifest_version": 3,
  "name": "Image & PDF Compressor",
  "version": "3.0.0",
  "description": "Reduce image and PDF file sizes by 50-80% with smart compression. All processing happens locally in your browser.",
  "author": {
    "name": "William Harvey",
    "url": "https://www.linkedin.com/in/williamharveyuk/"
  },
  "permissions": ["storage", "contextMenus"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Compress Image/PDF (Ctrl+Shift+E)",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Compress Image/PDF"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
